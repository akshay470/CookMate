<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HomeActivity">

        <!-- MENU ICON -->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_home" />

        <!-- HEADER TEXT -->

        <TextView
            android:id="@+id/textHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textFoodie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="foodie!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/textHello"
            app:layout_constraintStart_toEndOf="@id/textHello"/>

        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which indian food would you like to cook ?"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textHello"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- SEARCH BAR -->

        <EditText
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/searchview"
            android:hint="Search recipe"
            android:focusable="false"
            android:paddingStart="45dp"
            app:layout_constraintTop_toBottomOf="@id/textSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- CATEGORIES TITLE -->

        <TextView
            android:id="@+id/textCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/search"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- CATEGORY ICONS -->

        <ImageView
            android:id="@+id/salad"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/category_card_bc"
            app:srcCompat="@drawable/category_salad"
            app:layout_constraintTop_toBottomOf="@id/textCategories"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textSalad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salad"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/salad"
            app:layout_constraintStart_toStartOf="@id/salad"
            app:layout_constraintEnd_toEndOf="@id/salad"/>

        <ImageView
            android:id="@+id/mainDish"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/category_card_bc"
            app:srcCompat="@drawable/drinks"
            app:layout_constraintTop_toTopOf="@id/salad"
            app:layout_constraintStart_toEndOf="@id/salad"/>

        <TextView
            android:id="@+id/textMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/mainDish"
            app:layout_constraintStart_toStartOf="@id/mainDish"
            app:layout_constraintEnd_toEndOf="@id/mainDish"/>

        <ImageView
            android:id="@+id/drinks"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/category_card_bc"
            app:srcCompat="@drawable/catergory_drinks"
            app:layout_constraintTop_toTopOf="@id/salad"
            app:layout_constraintStart_toEndOf="@id/mainDish"/>

        <TextView
            android:id="@+id/textDrinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drink"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/drinks"
            app:layout_constraintStart_toStartOf="@id/drinks"
            app:layout_constraintEnd_toEndOf="@id/drinks"/>

        <ImageView
            android:id="@+id/desserts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/category_card_bc"
            app:srcCompat="@drawable/category_dessert"
            app:layout_constraintTop_toTopOf="@id/salad"
            app:layout_constraintStart_toEndOf="@id/drinks"/>

        <TextView
            android:id="@+id/textDesserts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desserts"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/desserts"
            app:layout_constraintStart_toStartOf="@id/desserts"
            app:layout_constraintEnd_toEndOf="@id/desserts"/>

        <!-- POPULAR RECIPES TITLE -->

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Recipes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/textSalad"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- POPULAR RECIPES LIST -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_popular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/popular_rv_item"/>

        <!-- COOKING TIP CARD -->

        <LinearLayout
            android:id="@+id/tip_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:orientation="vertical"
            android:background="@drawable/tip_bg"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/rv_popular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Cooking Tip of the Day"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Always preheat your pan before adding oil to avoid food sticking."
                android:textSize="14sp"
                android:textColor="#444"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
